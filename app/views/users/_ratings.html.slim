.User-rating
  = link_to  user_ratings_path(user), data: { push: true } do
    => t('rating.show.nr_of_ratings')
    = user.ratings.count
  .User-rating-values
    - if user.ratings.count > 0
      ul
        li
          = fa_icon "smile-o fw lg",
            text: number_with_precision( user.percentage_of_positive_ratings, :precision => 1 ).to_s+"%"
        li
          = fa_icon "meh-o fw lg",
            text: number_with_precision( user.percentage_of_neutral_ratings, :precision => 1 ).to_s+"%"
        li
          = fa_icon "frown-o fw lg",
            text: number_with_precision( user.percentage_of_negative_ratings, :precision => 1 ).to_s+"%"
