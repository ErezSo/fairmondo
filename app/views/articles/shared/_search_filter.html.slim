.Search-filter-wrapper.JS-active-toggle--container data={ sustained: "true" }
  .Search-filter-button
    h3.Search-heading.JS-active-toggle--trigger
      | Filter
      i.fa.fa-chevron-down.fa-lg.Search-arrow.JS-active-toggle--target
      i.fa.fa-chevron-up.fa-lg.Search-arrow.JS-active-toggle--target
  .Search-filter-container.JS-active-toggle--target
    ul.Search-filters
      = render 'articles/shared/filter/filter_condition',
        title: 'Zustand',
        filter_parameter: :condition,
        values: ArticleSearchForm.enumerized_attributes[:condition].values
      = render 'articles/shared/filter/filter_commendation',
        title: 'Filter',
        filter_parameters: [:fair, :ecologic, :small_and_precious, :swappable,
          :borrowable]
      = render 'articles/shared/filter/filter_price_range',
        title: 'Preis',
        filter_parameter: :order_by,
        values: []
      = render 'articles/shared/filter/filter_zip',
        title: 'Standort'
      = render 'articles/shared/filter/filter_order',
        title: 'Sortierung',
        filter_parameter: :order_by,
        values: ArticleSearchForm.enumerized_attributes[:order_by].values
    ul.Search-additional
      = render 'articles/shared/filter/filter_additional',
        title: fa_icon('cogs')
